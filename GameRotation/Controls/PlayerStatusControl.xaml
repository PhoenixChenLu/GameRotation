<UserControl x:Class="GameRotation.Controls.PlayerStatusControl"
			xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
			xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
			xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
			xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
			xmlns:local="clr-namespace:GameRotation.Controls"
			mc:Ignorable="d"
			DataContext="{Binding RelativeSource={RelativeSource Self}}"
			d:DesignHeight="Auto" d:DesignWidth="Auto">
	<StackPanel Orientation="Vertical">
		<TextBlock FontSize="14" FontWeight="Bold" HorizontalAlignment="Center">玩家状态信息</TextBlock>
		<TextBlock FontSize="14" HorizontalAlignment="Right" Text="{Binding CurrentTime}"></TextBlock>
		<Grid>
			<ProgressBar Panel.ZIndex="10" Foreground="Green" Height="20" Minimum="0" Maximum="{Binding PlayerMaxHealthValue}" Value="{Binding PlayerCurrentHealthValue}"></ProgressBar>
			<TextBlock Panel.ZIndex="20" HorizontalAlignment="Center" FontSize="14" Text="{Binding PlayerHealthInfoString}"></TextBlock>
			<TextBlock Panel.ZIndex="20" HorizontalAlignment="Right" FontSize="14" Text="{Binding PlayerHealthPercentageString}"></TextBlock>
		</Grid>
		<Grid>
			<ProgressBar Panel.ZIndex="10" Foreground="DodgerBlue" Height="20" Minimum="0" Maximum="{Binding PlayerMaxPowerValue}" Value="{Binding PlayerCurrentPowerValue}"></ProgressBar>
			<TextBlock Panel.ZIndex="20" HorizontalAlignment="Center" FontSize="14" Text="{Binding PlayerPowerInfoString}"></TextBlock>
			<TextBlock Panel.ZIndex="20" HorizontalAlignment="Right" FontSize="14" Text="{Binding PlayerPowerPercentageString}"></TextBlock>
		</Grid>
		<StackPanel Orientation="Horizontal">
			<local:Icon Width="40" Height="40" x:Name="AliveIcon"></local:Icon>
			<local:Icon Width="40" Height="40" x:Name="InCombatIcon"></local:Icon>
			<local:Icon Width="40" Height="40" x:Name="MountedIcon"></local:Icon>
			<local:Icon Width="40" Height="40" x:Name="InVehicleIcon"></local:Icon>
			<local:Icon Width="40" Height="40" x:Name="JumpingIcon"></local:Icon>
			<local:Icon Width="40" Height="40" x:Name="MovingIcon"></local:Icon>
			<local:Icon Width="40" Height="40" x:Name="CastingIcon"></local:Icon>
			<local:Icon Width="40" Height="40" x:Name="ChannelingIcon"></local:Icon>
			<local:Icon Width="40" Height="40" x:Name="GlobalCooldownIcon"></local:Icon>
		</StackPanel>
		<WrapPanel Orientation="Horizontal">
			<local:Icon Width="40" Height="40" x:Name="BuffIcon1"></local:Icon>
			<local:Icon Width="40" Height="40" x:Name="BuffIcon2"></local:Icon>
			<local:Icon Width="40" Height="40" x:Name="BuffIcon3"></local:Icon>
			<local:Icon Width="40" Height="40" x:Name="BuffIcon4"></local:Icon>
			<local:Icon Width="40" Height="40" x:Name="BuffIcon5"></local:Icon>
			<local:Icon Width="40" Height="40" x:Name="BuffIcon6"></local:Icon>
			<local:Icon Width="40" Height="40" x:Name="BuffIcon7"></local:Icon>
			<local:Icon Width="40" Height="40" x:Name="BuffIcon8"></local:Icon>
			<local:Icon Width="40" Height="40" x:Name="BuffIcon9"></local:Icon>
			<local:Icon Width="40" Height="40" x:Name="BuffIcon10"></local:Icon>
			<local:Icon Width="40" Height="40" x:Name="BuffIcon11"></local:Icon>
			<local:Icon Width="40" Height="40" x:Name="BuffIcon12"></local:Icon>
			<local:Icon Width="40" Height="40" x:Name="BuffIcon13"></local:Icon>
			<local:Icon Width="40" Height="40" x:Name="BuffIcon14"></local:Icon>
			<local:Icon Width="40" Height="40" x:Name="BuffIcon15"></local:Icon>
			<local:Icon Width="40" Height="40" x:Name="BuffIcon16"></local:Icon>
			<local:Icon Width="40" Height="40" x:Name="BuffIcon17"></local:Icon>
			<local:Icon Width="40" Height="40" x:Name="BuffIcon18"></local:Icon>
			<local:Icon Width="40" Height="40" x:Name="BuffIcon19"></local:Icon>
			<local:Icon Width="40" Height="40" x:Name="BuffIcon20"></local:Icon>
			<local:Icon Width="40" Height="40" x:Name="BuffIcon21"></local:Icon>
			<local:Icon Width="40" Height="40" x:Name="BuffIcon22"></local:Icon>
			<local:Icon Width="40" Height="40" x:Name="BuffIcon23"></local:Icon>
			<local:Icon Width="40" Height="40" x:Name="BuffIcon24"></local:Icon>
			<local:Icon Width="40" Height="40" x:Name="BuffIcon25"></local:Icon>
			<local:Icon Width="40" Height="40" x:Name="BuffIcon26"></local:Icon>
			<local:Icon Width="40" Height="40" x:Name="BuffIcon27"></local:Icon>
			<local:Icon Width="40" Height="40" x:Name="BuffIcon28"></local:Icon>
			<local:Icon Width="40" Height="40" x:Name="BuffIcon29"></local:Icon>
			<local:Icon Width="40" Height="40" x:Name="BuffIcon30"></local:Icon>
		</WrapPanel>
	</StackPanel>
</UserControl>